<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/weight_card_view"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="15dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/activity_vertical_margin"
    app:cardElevation="@dimen/activity_vertical_margin"
    app:contentPaddingBottom="10dp"
    app:contentPaddingLeft="10dp"
    app:contentPaddingRight="10dp"
    app:contentPaddingTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/medication_name"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:layout_centerInParent="false"
            android:layout_centerVertical="false"
            android:gravity="center"
            android:text="Name "
            android:textColor="@color/medication_name"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/medication_dosage"
            android:layout_width="187dp"
            android:layout_height="59dp"
            android:layout_below="@id/medication_name"
            android:layout_centerInParent="false"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="-60dp"
            android:layout_toEndOf="@+id/medication_name"
            android:layout_toRightOf="@+id/medication_name"
            android:gravity="center_vertical"
            android:text="100 mg"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/medication_frequency"
            android:layout_width="313dp"
            android:layout_height="39dp"
            android:layout_below="@+id/medication_dosage"
            android:layout_marginTop="4dp"
            android:text="taken 2 times a day"
            android:textColor="@color/medication_frequency"
            android:textSize="18sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
